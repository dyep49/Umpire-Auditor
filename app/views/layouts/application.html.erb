<!DOCTYPE html>
<html>
<head>
  <title>Umpire Auditor</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">

<div class="shift-left navbar-header">
	<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
	<span class="sr-only">Toggle navigation</span>
	<span class="icon-bar"></span>
	<span class="icon-bar"></span>
	<span class="icon-bar"></span>	
	</button>
	<a class="title navbar-brand" href="/">Umpire Auditor</a>
</div>

<div class="shift-right collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	<ul class="nav navbar-nav">
		<li class=<%=@pitches_status%>><%= link_to "Home", pitches_path %></li>
		<li class=<%=@umpires_status%>><%= link_to "Umpires", umpires_path %></li>
		<li><%= link_to "Favorites", favorites_path %></li>
		<li><%= link_to "Games", games_path %></li>
	</ul>
	<ul class="nav navbar-nav navbar-right">
		<% if user_signed_in? %>
			<li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
		<% else %>
			<li><%= link_to "Sign up", new_user_registration_path %></li>
			<li><%= link_to "Sign in", new_user_session_path %></li>
		<% end %>
	</ul>
</div>

</nav>

<% if user_signed_in? %>
Signed in as <%= current_user.email %>. <%= link_to "Not you?", destroy_user_session_path, :method => :delete %>
<% end %>
	

<% if notice %>
  <p class="alert alert-notice"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-error"><%= alert %></p>
<% end %>
</div>

<div class="pad-top container">
<%= yield %>
</div>

</body>
</html>

